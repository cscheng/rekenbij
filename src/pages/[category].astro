---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCategoryPaths, getQuizPaths } from "../routes";

export function getStaticPaths() {
  return getCategoryPaths();
}

const { title } = Astro.props;
const { category } = Astro.params;

const quizzes = getQuizPaths(category);
---

<style>
  header {
    padding: 1rem 0;

    nav {
      max-width: var(--max-width);
      margin: 0 auto;
    }

    a {
      display: inline-block;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background-color: #e2e8f0;
      background-color: #ddd;
      text-decoration: none;
      text-align: center;
      color: white;
      transition: background-color 0.2s;

      &::before {
        content: "←";
      }

      &:hover {
        background-color: var(--grey-color);
      }

      /* Hide text accessibly */
      font-size: 0;
      line-height: 0;

      &::before {
        font-size: 16px;
        line-height: 32px;
      }
    }
  }

  main {
    max-width: 600px;
    margin: 0 auto;

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    li {
      margin-bottom: 8px;
    }

    a {
      display: block;
      padding: 0.8rem;
      border: 4px solid #e2e8f0;
      border-width: 2px 2px 4px;
      border-color: var(--blue-color);
      color: var(--blue-color);
      text-decoration: none;
      border-radius: 8px;
      position: relative;

      &::after {
        content: "›";
        position: absolute;
        right: 0.8rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.5rem;
      }

      &:hover {
        background-color: var(--blue-color);
        color: white;
      }
    }
  }
</style>

<BaseLayout title={title}>
  <header>
    <nav>
      <a href="/" aria-label="Terug">Terug</a>
    </nav>
  </header>
  <main>
    <h1>{title}</h1>
    <p>Kies een oefening</p>
    <nav>
      <ul>
        {
          quizzes.map((quiz) => (
            <li>
              <a href={`/${quiz.params.quiz}`}>{quiz.props.title}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </main>
</BaseLayout>
