---
import Header from "../components/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCategoryPaths, getQuizPaths } from "../routes";

export function getStaticPaths() {
  return getCategoryPaths();
}

const { title } = Astro.props;
const { category } = Astro.params;

const quizzes = getQuizPaths(category);
---

<style>
  main {
    border-radius: 16px;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem;

    &[data-category="plussommen"] {
      background-color: color-mix(in srgb, var(--green-color) 15%, white);
    }

    &[data-category="minsommen"] {
      background-color: color-mix(in srgb, var(--orange-color) 15%, white);
    }

    &[data-category="tafels"] {
      background-color: color-mix(in srgb, var(--blue-color) 15%, white);
    }
  }

  .back-button {
    display: inline-block;
    margin-bottom: 0.5rem;
    padding: 0.25rem 0.5rem;
    color: var(--text-color);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.1s;

    &::before {
      content: "← ";
      margin-right: 0.25rem;
    }

    &:hover {
      color: color-mix(in srgb, var(--text-color) 60%, white);
    }
  }

  &[data-category="plussommen"] .back-button {
    background-color: color-mix(in srgb, var(--green-color) 15%, white);
  }

  &[data-category="minsommen"] {
    background-color: color-mix(in srgb, var(--orange-color) 15%, white);
  }

  &[data-category="tafels"] {
    background-color: color-mix(in srgb, var(--blue-color) 15%, white);
  }

  h1 {
    margin: 0 0 1rem;
    color: var(--text-color);
  }

  nav {
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    a {
      position: relative;
      display: block;
      border-radius: 27px;
      border-width: 2px;
      border-style: solid;
      height: 54px;
      padding-left: 1.5rem;
      font-size: 16px;
      line-height: 54px;
      text-decoration: none;
      color: var(--text-color);
      transition: all 0.1s;

      &::after {
        content: "›";
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.5rem;
      }

      &:hover {
        background-color: white;
        color: var(--text-color);
      }
    }
  }

  [data-category="plussommen"] nav a {
    background-color: var(--green-color);
    border-color: var(--green-color);
    color: white;

    &:hover {
      background-color: white;
      color: var(--green-color);
    }
  }

  [data-category="minsommen"] nav a {
    background-color: var(--orange-color);
    border-color: var(--orange-color);
    color: white;

    &:hover {
      background-color: white;
      color: var(--orange-color);
    }
  }

  [data-category="tafels"] nav a {
    background-color: var(--blue-color);
    border-color: var(--blue-color);
    color: white;

    &:hover {
      background-color: white;
      color: var(--blue-color);
    }
  }
</style>

<BaseLayout title={title}>
  <Header showBackButton={true} />
  <main data-category={category}>
    <a href="/" class="back-button">Terug</a>
    <h1>{title}</h1>
    <p>Kies een oefening</p>
    <nav>
      <ul>
        {
          quizzes.map((quiz) => (
            <li>
              <a href={`/${quiz.params.quiz}`}>{quiz.props.title}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </main>
</BaseLayout>
