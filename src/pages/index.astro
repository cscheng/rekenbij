---
import Header from "../components/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getStaticPaths } from "./[category].astro";

const categories = getStaticPaths();
---

<style>
  main {
    border-radius: 16px;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem;
    background-color: color-mix(in srgb, black 5%, white);
    background-color: #f8f5f2;
  }

  h1 {
    margin: 0 0 1rem;
    font-weight: normal;
    color: var(--text-color);
  }

  nav {
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    a {
      position: relative;
      display: block;
      border-radius: 27px;
      border-width: 2px;
      border-style: solid;
      height: 54px;
      padding-left: 3rem;
      font-size: 16px;
      line-height: 54px;
      text-decoration: none;
      color: var(--text-color);
      transition: all 0.1s;

      &::before {
        content: "";
        position: absolute;
        left: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.5rem;
        font-weight: bold;
      }

      &[data-category="plussommen"] {
        background-color: var(--green-color);
        border-color: var(--green-color);
        color: white;

        &::before {
          content: "+";
        }

        &:hover {
          background-color: white;
          /* background-color: color-mix(in srgb, var(--green-color) 50%, white); */
          color: var(--green-color);
        }
      }

      &[data-category="minsommen"] {
        background-color: var(--orange-color);
        border-color: var(--orange-color);
        color: white;

        &::before {
          content: "−";
        }

        &:hover {
          background-color: white;
          color: var(--orange-color);
        }
      }

      &[data-category="tafels"] {
        background-color: var(--blue-color);
        border-color: var(--blue-color);
        color: white;

        &::before {
          content: "×";
        }

        &:hover {
          background-color: white;
          color: var(--blue-color);
        }
      }
    }
  }
</style>

<BaseLayout>
  <Header />
  <main>
    <h1>Ik wil oefenen met</h1>
    <nav>
      <ul>
        {
          categories.map((category) => (
            <li>
              <a
                href={`/${category.params.category}`}
                data-category={category.params.category}
              >
                {category.props.title}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </main>
</BaseLayout>
